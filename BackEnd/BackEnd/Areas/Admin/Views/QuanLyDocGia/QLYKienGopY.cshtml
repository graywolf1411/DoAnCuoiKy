@model IEnumerable<BackEnd.Models.YKienDocGia>

@{
    ViewBag.Title = "Quản lý ý kiến của đọc giả";
}


<h2>Quản lý ý kiến của độc giả</h2><br/>


<table style="border:1px solid black; border-collapse:collapse; border-spacing:20px">
    <tr style="text-align:center">
        <th style="border:1px solid black">         
            Tiêu đề
        </th>
        <th style="border:1px solid black">         
            Ngày gửi
        </th>
        <th style="border:1px solid black">
            Nội dung
        </th>
        <th style="border:1px solid black">
            Ký danh người gửi
        </th>
        <th style="border:1px solid black">Thao tác</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="border:1px solid black">
            @Html.DisplayFor(modelItem => item.TieuDe)
        </td>
        <td style="border:1px solid black">
            @Html.DisplayFor(modelItem => item.NgayGui)
        </td>
        <td style="border:1px solid black">
            @Html.DisplayFor(modelItem => item.NoiDung)
        </td>
        <td style="border:1px solid black">
            @Html.DisplayFor(modelItem => item.KyDanh)
        </td>
        <td style="border:1px solid black">
            @Html.ActionLink("Xóa", "remove", new { id = item.ID }, new { onclick="return confirm('Xóa nội dung này?')" })
        </td>
    </tr>
}

</table>
